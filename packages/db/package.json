  },
  "author": "aeonzz",
  "license": "MIT",
  "devDependencies": {
    "prisma": "^7.1.0",
    "tsdown": "^0.17.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "dotenv": "catalog:",
    "zod": "catalog:"
  }
}
